{
  "name": "geyser-frontend",
  "version": "0.0.0",
  "author": "Julien Hauseux <julien.hauseux@univ-lille.fr>",
  "license": "AGPL-3.0-only",
  "private": true,
  "type": "module",
  "engines": {
    "node": "=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:app": "vue-tsc --noEmit -p tsconfig.app.json",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:app",
    "validate": "pnpm run format:check && pnpm run typecheck && pnpm run lint && pnpm run test",
    "codegen:schema": "graphql-codegen --config codegen.schema.ts",
    "codegen:documents": "graphql-codegen --config codegen.documents.ts",
    "codegen": "pnpm codegen:schema && pnpm codegen:documents"
  },
  "dependencies": {
    "@quasar/extras": "^1.16.17",
    "@urql/vue": "^1.4.2",
    "dompurify": "^3.2.4",
    "dotenv": "^16.4.7",
    "graphql": "^16.10.0",
    "keycloak-js": "^26.1.2",
    "papaparse": "^5.5.2",
    "quasar": "^2.17.7",
    "vue": "^3.5.13",
    "vue-i18n": "^11.1.1",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/client-preset": "^4.6.2",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@quasar/vite-plugin": "^1.9.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.13.4",
    "@types/papaparse": "^5.3.15",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@urql/devtools": "^2.0.3",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^16.0.0",
    "happy-dom": "^17.1.0",
    "prettier": "^3.5.1",
    "sass-embedded": "^1.85.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.1.0",
    "vitest": "^3.0.6",
    "vue-tsc": "^2.2.2"
  }
}
