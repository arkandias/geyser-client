{
  "name": "geyser-frontend",
  "version": "0.0.0",
  "author": "Julien Hauseux <julien.hauseux@univ-lille.fr>",
  "license": "AGPL-3.0-only",
  "private": true,
  "type": "module",
  "engines": {
    "node": "=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit -p tsconfig.node.json && vue-tsc --noEmit -p tsconfig.app.json",
    "validate": "pnpm run typecheck && pnpm run format:check && pnpm run lint && pnpm run test",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "@quasar/extras": "^1.16.15",
    "@urql/vue": "^1.4.2",
    "dotenv": "^16.4.7",
    "graphql": "^16.10.0",
    "keycloak-js": "^26.0.8",
    "quasar": "^2.17.6",
    "slugify": "^1.6.6",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/client-preset": "^4.5.1",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@quasar/vite-plugin": "^1.8.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@urql/devtools": "^2.0.3",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "happy-dom": "^16.6.0",
    "prettier": "^3.4.2",
    "sass-embedded": "^1.83.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^5.4.11",
    "vitest": "^2.1.8",
    "vue-tsc": "^2.2.0"
  }
}
